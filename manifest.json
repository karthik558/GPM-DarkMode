{
  "manifest_version": 3,
  "name": "GPM Dark Mode",
  "author": "KARTHIK LAL",
  "description": "Unofficial dark mode for GPM Software",
  "version": "1.2.0",
  "icons": {
    "16": "icons/logo1.png",
    "48": "icons/logo1.png",
    "128": "icons/logo1.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.mgntproject.com/*",
    "*://*.iimwin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mgntproject.com/*",
        "*://*.iimwin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo1.png",
      "48": "icons/logo1.png",
      "128": "icons/logo1.png"
    }
  }
}