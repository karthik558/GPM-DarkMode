{
  "manifest_version": 3,
  "name": "GPM Dark Mode",
  "author": "KARTHIK LAL",
  "description": "Unofficial Materialized dark mode for GPM Software",
  "version": "3.3.0",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "*://*.mgntproject.com/*",
    "*://*.iimwin.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mgntproject.com/*",
        "*://*.iimwin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gpm-dark-mode@karthiklal.in",
      "strict_min_version": "109.0"
    }
  }
}