{
  "manifest_version": 3,
  "name": "GPM Dark Mode",
  "author": "KARTHIK LAL",
  "description": "Unofficial Customized theme for GPM Software [Dark Mode, Light Mode, Materialized]",
  "version": "3.5.6",
  "icons": {
    "16": "icons/logo-blue.png",
    "48": "icons/logo-blue.png",
    "128": "icons/logo-blue.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "*://*.mgntproject.com/*",
    "*://*.iimwin.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mgntproject.com/*",
        "*://*.iimwin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-blue.png",
      "48": "icons/logo-blue.png",
      "128": "icons/logo-blue.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["icons/*.png"],
    "matches": ["*://*.mgntproject.com/*", "*://*.iimwin.com/*"]
  }]
} 